<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>

        body {
            font-family: 'Arial', sans-serif;
        }
        /* Additional style for the company logo and name */
        .company-logo {
            display: flex;
            align-items: center;
            margin-top: 10px;
            margin-left: 20px;
        }

        .logo-img {
            width: 60px; /* Adjust the width as needed */
            height: 40px; /* Adjust the height as needed */
            margin-right: 10px;
        }

        .company-name {
            color: #3498db;
            font-size: 20px;
        }


        .employee-card {
            background-color: #f2f4f6;
            border: 1px solid #d1d3e2;
            width: 300px; /* Set the width */
            height: 300px; /* Set the height */
            display: inline-block;
            margin-right: 10px;
            margin-bottom: 10px;
        }

        .employee-card-title {
            background-color: #3498db;
            color: #fff;
            padding: 10px;
            margin-bottom: 0;
        }

        .employee-info {
            padding: 15px;
        }

        .employee-picture {
            float: right;
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            margin-left: 10px;
        }

        .add-employee-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
        }

        /* Additional style for the company name */
        .company-name {
            color: #3498db;
            font-size: 20px;
            margin-top: 10px;
            margin-left: 20px;
        }
    </style>
    <title>Employee List</title>
</head>
<body>
<div class="company-logo" style="background-color: #3498db;">
    <img src="/pictures/logo.ai" alt="Company Logo" class="logo-img">
    <div class="company-name" style="color: white">Dunder Mifflin</div>
</div>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/employees">Employee List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/customers">Customer List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/book-appointment">Book Appointment</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container mt-4">
    <h1 class="mb-4">Employee List</h1>
    <div class="row">
        <% employees.forEach(employee => { %>
            <div class="col-md-4 mb-4">
                <div class="card employee-card">
                    <div class="card-header employee-card-title">
                        <%= employee.name %>
                    </div>
                    <div class="card-body employee-info">
                        <img src="/pictures/<%= employee.name %>.jpg" alt="<%= employee.name %>'s Picture" class="employee-picture">
                        <p class="card-text">Age: <%= employee.age %></p>
                        <p class="card-text">Years Employed: <%= employee.yearsEmployed %></p>
                        <p class="card-text">Division: <%= employee.division %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<button type="button" class="btn btn-primary add-employee-button" data-toggle="modal" data-target="#addEmployeeModal">
    + Add Employee
</button>

<div class="modal fade" id="addEmployeeModal" tabindex="-1" role="dialog" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
    <!-- ... (modal content) ... -->
</div>

<footer class="footer">
    <div class="container text-center text-dark">
        All rights reserved to Gal Yaish
    </div>
</footer>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- JavaScript code (including the employee addition logic) -->
<script>
